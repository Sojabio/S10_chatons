<head>
  <style>
    .separator {
      border-top: 1px solid #ccc;
      margin: 10px 0;
    }

  </style>
</head>
<body style="min-height: 100vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center card border-dark" style="margin: 50px;">
          <h1>Votre panier</h1>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td colspan="4" class="separator"></td>
                </tr>
                <% @cart_items.each_with_index do |item, index| %>
                  <tr>
                    <td class="align-middle">
                      <%= image_tag 'cat.png', width: 100, height: 100 %>
                    </td>
                    <td class="align-middle">
                      <%= item.item.title %>
                    </td>
                    <td class="align-middle">
                      <%= item.item.price %>€
                    </td>
                    <td class="align-middle">
                      <%= button_to cart_item_path(item), method: :delete, class: "delete-button", style: "background:none; border:none; padding:0;" do %>
                        <i class="fa-regular fa-trash-can" style="color: #58e7e9;"></i>
                      <% end %>
                    </td>
                  </tr>
                    <tr>
                      <td colspan="4" class="separator"></td>
                    </tr>
                  <% if index == @cart_items.length - 1 %>
                    <tr>
                      <td colspan="4">
                        <h4>Total: <%= @total %>€</h4>
                      </td>
                    </tr>
                    <tr>
                      <td colspan="4" class="button-row">
                        <button type="button" class="btn btn-success">Passer au paiement</button>
                        <a href="<%= root_path %>" class="btn btn-light" role="button">Continuer mes achats</a>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://kit.fontawesome.com/ed9467bbaf.js" crossorigin="anonymous"></script>
</body>