<br><br><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <h1>Modifier le produit</h1>
      
      <%= form_for([:admin, @item]) do |f| %>

        <%= render "devise/shared/error_messages", resource: @item %>

        <div class="form-group">
          <%= f.label :title, "Nom" %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "Prix" %><br />
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <br>
        <div class="form-group">
          <%= f.label :photo, "Photo" %><br />
          <%= f.file_field :photo, class: "form-control" %>
        </div>
        <br>
        <br><br>

        <div class="form-actions">
          <%= f.submit "Enregistrer les modifications", class: "btn btn-dark" %>
          <%= link_to "Retour", item_path(@item), class: "btn btn-dark float-end" %>
        </div>

        <% end %>
        <br><br>
        <div class="form-actions text-center">
          <%= button_to "Supprimer le produit", item_path(@item), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce produit ?" }, class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>